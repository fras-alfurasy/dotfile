############   Apps   ############

# terminal
super + Return
    $WM_DEFAULT_TERMINAL

# browser
super + shift + w
    $WM_DEFAULT_BROWSER

# telegram
super + shift + t
    telegram

# rofi (apps)
super + d
	rofi -show drun

# rofi (commands)
super + shift+ d
	rofi -show run

# flameshot
{_,super} Print
	flameshot {full -c,gui}

# lock the wm
super + shift + x
    i3lock-fancy

############   Window Manager   ############

# reload sxhdrc
super + Escape
	pkill -USR1 -x sxhkd

# toggle compositor
super + shift + c
	picom_toggle

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# monocle layout
super + m
	bspc desktop -l next

super + a
    bspc desktop focused -m next --follow

# fullscreen layout
super + f
	bspc node -t \~fullscreen

# swap with the biggest local node
super + g
	bspc node -s biggest.local

# set window to floating
super + u
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# set window to pseudo-tiled
super + i
	bspc node focused.tiled -t pseudo_tiled || bspc node -t tiled

# hide/unide window
super + {_, shift} + n
	{bspc node --flag hidden=on, bspunhide}

# rotate windows tree
super + shift + r
	bspc node @/ -R 90

# set the node flags
super + ctrl + {m,l,s,p}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {h, j, k, l}
	bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
	bspwm_move {west,south,north,east}

# focus the next/previous node in the current desktop
super + {j,k}
	bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Move current window to a pre-selected space
super + p
    bspwm_fill

# resize current window
super + alt + {h, j, k, l}
    bspwm_resize {west,south,north,east} 25

############   Misc   ############

# volume decrease
XF86AudioLowerVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
# volume increase
XF86AudioRaiseVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
# volume mute/unmute
XF86AudioMute
	wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
# mic mute/unmute
XF86AudioMicMute
	wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# music controls
super + {less,greater,question,comma,period}
	mpc {prev,next,toggle,seek -12, seek +12}
